<Window x:Class="PartyOrganizer.CreateEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartyOrganizer"
        mc:Ignorable="d"
        Title="Create new event" Height="300" Width="300">
    <Grid>
        
        <TextBox x:Name="tbEventName" HorizontalAlignment="Left" Height="23" Margin="125,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="139"/>
        <Label x:Name="label" Content="Event name:" HorizontalAlignment="Left" Margin="32,39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbDescription" HorizontalAlignment="Left" Height="119" Margin="32,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="232"/>
        <Label x:Name="label1" Content="Description:" HorizontalAlignment="Left" Margin="32,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCreateEvent" Content="Create" HorizontalAlignment="Left" Margin="31,229,0,0" VerticalAlignment="Top" Width="233" Click="btnCreateEvent_Click"/>
        
    </Grid>
</Window>
